<div class='row'>  
    <div class='col-md-6'>
        <h3>Shopping Cart</h3>
            <ul>
                {{#each item}}
                    {{item_name}}
                    {{quantity}}
                    {{price}}
                    <button class='remove-item' id={{id}}>Remove</button>
                {{/each}}
            </ul>
            <p>Sub Total: {{subTotal}}</p>
            <p>Tax: {{tax}}</p>
            <p>Shipping: {{shipping}}</p>
            <p>Grand Total: {{grandTotal}}</p>
    </div>
    <button class='save-cart'>Save</button>
    <button class='checkout-item'>Checkout</button>
</div>